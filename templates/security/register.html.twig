{% extends '/base.html.twig' %}

{% block title %}Register - Lift Stuff{% endblock %}

{% block navbar_links %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('login') }}">Login</a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="login-box text-center">
            <div class="mb-3">
                <i class="bi bi-barbell" style="font-size: 2rem;"></i>
                <h2>Register! Join Lift Stuff!</h2>
            </div>
            <div class="color-bar"></div>

            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            <form method="post" action="{{ path('register') }}">
                <div class="mb-3">
                    <label>
                        <input type="text" name="username" class="form-control" placeholder="Username" required autofocus>
                    </label>
                </div>
                <div class="mb-3">
                    <label>
                        <input type="password" name="password" class="form-control" placeholder="Password" required>
                    </label>
                </div>
                <div class="mb-3">
                    <label>
                        <input type="password" name="password_confirm" class="form-control" placeholder="Confirm Password" required>
                    </label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
        </div>
    </div>
{% endblock %}
