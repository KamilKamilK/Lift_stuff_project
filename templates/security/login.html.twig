{% extends '/base.html.twig' %}

{% block title %}Login - Lift Stuff{% endblock %}

{% block body %}
    <div class="container login-container d-flex justify-content-center align-items-center" style="min-height: 70vh;">
        <div class="card login-card shadow-sm p-4" style="max-width: 400px; width: 100%;">
            <div class="text-center mb-3">
                <i class="bi bi-barbell login-icon"></i>
                <h2 class="mt-2">Login! Start Lifting!</h2>
            </div>

            <div class="color-bar mb-3"></div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post" action="{{ path('login') }}">
                <div class="mb-3">
                    <input type="text" name="_username"
                           class="form-control js-login-field-username"
                           placeholder="Username"
                           value="{{ last_username }}"
                           required autofocus>
                </div>

                <div class="mb-3">
                    <input type="password" name="_password"
                           class="form-control"
                           placeholder="Password"
                           required>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button type="submit" class="btn btn-login w-100">Login</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/login.js') }}"></script>
{% endblock %}
