<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Lift Stuff{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {# Bootstrap 5 CSS #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    {# Font Awesome 6 #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    {# Własny CSS #}
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>

{# Navbar fixed-top jak w oryginale #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('homepage')}}" data-bs-toggle="tooltip" data-placement="bottom"
        title="DO IT! LIFT STUFF!!!">Lift Stuff</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarMain">
            <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item dropdown" data-bs-toggle="tooltip" data-placement="left"
                        title="Welcome back {{ app.user.username }}">
                        <a class="nav-link dropdown-toggle" href="#" id="userMenu" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="fa fa-user"></span> <strong>{{ app.user.userIdentifier }}</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                            <li>
                                <a class="dropdown-item" href="{{ path('lift_index') }}">
                                    <img class="mini-dumbbell" src="{{ asset('images/dumbbell.png') }}" alt="dumbbell">
                                    Lift Stuff
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('logout') }}">
                                    <span class="fa fa-sign-out"></span> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('register') }}">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('login') }}">Login</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{# Hero block tuż pod navbar #}
{% block hero %}{% endblock %}

<div class="container main-content mt-5 pt-5">
    {# Flash messages #}
    {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} flash-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}

    <footer class="footer mt-5">
        <hr/>
        <p>&copy; LiftStuff {{ ''|date('Y') }} by Kamil</p>
    </footer>
</div>

{# Skrypty JS - jQuery + Bootstrap bundle #}
{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% endblock %}

</body>
</html>
