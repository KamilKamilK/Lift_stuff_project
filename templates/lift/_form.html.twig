<form id="list-stuff-form" method="post" action="{{ path('lift_add') }}" class="form-inline">
    <div class="form-group">
        <label for="itemLabel" class="sr-only">What did you lift?</label>
        <input type="text" name="itemLabel" id="itemLabel" placeholder="What did you lift?" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="reps" class="sr-only">How many times?</label>
        <input type="number" name="reps" id="reps" min="1" placeholder="How many times?" class="form-control" required>
    </div>
    <div class="form-group">
        <label for="weight" class="sr-only">Weight</label>
        <input type="number" step="0.1" name="weight" id="weight" placeholder="Weight (kg)" class="form-control" required>
    </div>
    <button type="submit" class="btn btn-primary">I Lifted it!</button>
</form>
